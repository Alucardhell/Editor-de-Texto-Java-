    // Evento  para diminuir a fonte da Area do Texto(JTextArea).
    private void diminuirFonteActionPerformed(java.awt.event.ActionEvent evt) {                                              
        
        // Pega a Fonte antiga da JTextArea.
        Font f = textoArea.getFont();
        // Pega o tamanho da Fonte antiga da JTextArea.
        int size = textoArea.getFont().getSize();
        // Atualiza a fonte da area de texto (JTextArea), diminuindo em 1 o tamanho da fonte.
        textoArea.setFont(f.deriveFont(f.getStyle(), size - 1));
        
    }                                             

    // Evento  para auemntar a fonte da Area do Texto(JTextArea).
    private void aumentarFonteActionPerformed(java.awt.event.ActionEvent evt) {                                              
        
        // Pega a Fonte antiga da JTextArea.
        Font f = textoArea.getFont();
        // Pega o tamanho da Fonte antiga da JTextArea.
        int size = textoArea.getFont().getSize();
        // Atualiza a fonte da area de texto (JTextArea), aumentando em 1 o tamanho da fonte.
        textoArea.setFont(f.deriveFont(f.getStyle(), size + 1));
        
    }                                             

    // Evento para alterar a Fonte para negrito ou remover o negrito da fonte.
    private void negritoBoxActionPerformed(java.awt.event.ActionEvent evt) {                                           
       
        // Pega a Fonte antiga da JTextArea.
        Font f = textoArea.getFont();
        // Pega o tamanho da Fonte antiga da JTextArea.
        int size = textoArea.getFont().getSize();
        // Guarda na variavel o valor em int da Font em negrito ou normal.
        int style = negritoBox.isSelected() ? Font.BOLD : Font.PLAIN;
        // Atualiza a fonte da area de texto (JTextArea), modificando para negrito ou normal.
        textoArea.setFont(f.deriveFont(style, size));
        
    }                                          

    // Evento para trocar a Fonte da Area de Texto (JTextArea), conforme o item selecionado.
    private void comboBoxActionPerformed(java.awt.event.ActionEvent evt) {                                         
        
        // Pega a Fonte antiga da JTextArea.
        Font f = textoArea.getFont();
        // Transforma o item do tipo objeto para o tipo String.
        String nomeFonte = (String)comboBox.getSelectedItem();
        // Cria nova fonte com os dados de estilo e tamanho da fonte anterior mais o nome da fonte selecionado pelo evento.
        Font fnew = new Font (nomeFonte,f.getStyle(), f.getSize());
        // Atualiza a fonte da area de texto (JTextArea).
        textoArea.setFont(fnew);
        
    }                                        

